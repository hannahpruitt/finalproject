{% extends '_templates/base.njk' %}

{% block page_title %}Queen's Discography{% endblock %}

{% block page_description %}Entireity of Queen's Discography{% endblock %}

{% block content %}
<div class="container">
  <h1>Queen's Full Discography</h1>
  <p></p>
    <div class="row">
    {% for disc in albums.discography %}
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
          <a href="albums/{{ album.slug }}.html"><h5 class="card-title">{{ disc.title }}</h5></a>
          <h6>{{ disc.year }}</h6>
          <img src="img/disc/{{ disc.image }}" alt="album cover" class="img-fluid">
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}